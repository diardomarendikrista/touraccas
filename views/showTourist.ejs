<%- include('./partials/header') %>

<h2>Tourist List</h2>
<p><a href="/tourists/add">add tourist</a></p>
<table border="1">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Age</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach((element, index) => { %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= element.getFullName() %></td>
        <td><%= element.age %></td>
        <td><%= element.phone %></td>
        <td>
          <a href="/tourists/<%= element.id %>/edit">Edit</a> |
          <a href="/tourists/<%= element.id %>/delete" onclick="return confirm('Are you sure to delete?')">Delete</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('./partials/footer') %>