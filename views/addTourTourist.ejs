<%- include('./partials/navbar') %>
<%- include('./partials/general') %>

<h6 class="montserrat"> <%= dataTour.name  %></h6>
<h6 class="bitmontserrat">üìç<%= dataTour.destination %> </h6><br>

<form action="/tours/<%= dataTour.id %>/addTourist" method="POST">
  <% if (errValidate) {%>
    <p class="errMessage"><%= errValidate %></p>
  <% } %>

  <label for="tourist_id">Tourist</label>
  <select name="tourist_id">
    <option value="">--- SELECT ---</option>
    <% dataTourist.forEach(element => { %>
      <option value="<%= element.id %>"><%= element.getFullName() %></option>
    <% }); %>
  </select>
  <button type="submit">add tourist to tour</button>
</form><br>

<table border="1">
  <thead>
    <tr>
      <th>no</th>
      <th>name</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% dataTour.Tourists.forEach((element, index)=> { %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= element.getFullName() %></td>
        <td>
           <a href="/tours/<%= dataTour.id %>/addTourist/<%= element.id %>/delete" class="btnMenu" onclick="return confirm('Are you sure to delete?')">Delete</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>


